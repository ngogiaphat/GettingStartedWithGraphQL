{
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "Node",
		"target": "ES2020",
		"jsx": "react",
		"checkJs": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true
	},
	"exclude": [
		"node_modules",
		"**/node_modules/*"
	],
	"rules": {
		"@javascript-eslint/semi": "warn",
		"@typescript-eslint/semi": "warn",
		"semi": [
			2, "always"
		],
	},
}